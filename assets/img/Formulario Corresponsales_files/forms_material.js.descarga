//Validaci√≥n de los input material

$('.input_outline').focusin(function() {
    $('.input_outline ~ label').animate({
        'fontSize': '0.8rem',
        'top': '-0.7rem',
        'padding': '0.25rem'
    }, 80);
});
$('.input_outline').focusout(function() {
    if ($(this).val() === '') {
        $('.input_outline ~ label').animate({
            'fontSize': '1rem',
            'top': '1rem',
            'padding': 0
        }, 80);
    }
});


